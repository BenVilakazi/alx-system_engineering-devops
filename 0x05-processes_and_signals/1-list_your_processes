#!/bin/env bash
# Display a list of currently running processes.
#
# Must show all processes, for all users, including those which might not have a TTY
# Display in a user-oriented format
# Show process hierarchy

# Get a list of all processes.
processes=$(ps -e -o pid,user,command)

# Sort the processes by PID.
processes=$(sort -n $processes)

# Print the header.
echo "PID   USER      COMMAND"

# Print each process.
for process in $processes; do
  # Split the process into its components.
  pid,user,command=$(echo $process | cut -d " " -f 1,2,3)

  # Print the process.
  echo "$pid  $user  $command"
done
